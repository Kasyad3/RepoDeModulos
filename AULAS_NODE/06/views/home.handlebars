<body>

  <h1>Banana Coletada:</h1>
  <form class="form" action="/books/insertbook" method="POST">
    <div class="form-control">
      <label for="title">Nome:</label>
      <input type="text" name="title" placeholder="Dê um nome para a banana">
    </div>
    <div class="form-control">
      <label for="pageqty">Quantidade:</label>
      <input type="number" name="pageqty" placeholder="Quantas bananas você coletou?">
    </div>
    <input type="submit" value="Cadastrar">
  </form>

  <div class="carousel-container">
    <div class="carousel-slide">
      <img src="/img/pngegg.png" class="personagem" alt="" id="1">
      <img src="/img/pngegg(1).png" class="personagem" alt="" id="2">
      <img src="/img/pngegg(2).png" class="personagem" alt="" id="3">
    </div>
  </div>

  <div class="video-card">

    <img src="/img/DEj.gif" alt="">
    <img src="/img/YQDq.gif" alt="">
    <img src="/img/V0pW.gif" alt="">

  </div>
</body>

<!-- Adicione antes do fechamento da tag </body> em main.handlebars ou diretamente em home.handlebars -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const slide = document.querySelector('.carousel-slide');
    const images = document.querySelectorAll('.carousel-slide img.personagem');
    let current = 0;

    function showSlide(index) {
      slide.style.transform = `translateX(-${index * 500}px)`;
    }

    function nextSlide() {
      current = (current + 1) % images.length;
      showSlide(current);
    }

    setInterval(nextSlide, 2500); // Troca a cada 2.5 segundos

    showSlide(current);
  });
</script>

<script>
  function createBanana() {
    const banana = document.createElement('img');
    banana.src = '/img/banana2.gif'; // Caminho da sua imagem
    banana.className = 'banana';
    banana.style.left = Math.random() * 100 + 'vw';
    banana.style.animationDuration = (2 + Math.random() * 3) + 's'; // velocidade aleatória

    document.body.appendChild(banana);

    banana.addEventListener('animationend', () => {
      banana.remove();
    });
  }

  setInterval(createBanana, 400); // Ajuste a frequência da chuva aqui
</script>